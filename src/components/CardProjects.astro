---
import { proyectos } from "../../public/proyectos.json";
---

<div class="card-container relative w-full flex justify-center items-center">
  {
    proyectos.map((proyecto) => (
      <a
        href={proyecto.url}
        target="_blank"
        class="card__projects"
        style={proyecto.i}
      >
        <h3 class="text-2xl font-semibold">{proyecto.name}</h3>
        <p>{proyecto.description}</p>
      </a>
    ))
  }
</div>

<style is:inline>
  .hidden {
    display: none;
  }
  .card-container .card__projects {
    user-select: none;
    position: absolute;
    width: 240px;
    height: 320px;
    padding: 10px;
    border-radius: 8px;
    background: #5e5cfc;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 30px;
    text-align: center;
    font-size: 18px;
    border: 10px solid rgba(0, 0, 0, 0.1);
    transform-origin: 671% -257%;
    color: rgba(0, 0, 0, 0.1);
    transition: 0.5s;
    filter: hue-rotate(calc(var(--i) * 50deg));
    cursor: pointer;
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
  }

  .card-container:hover .card__projects {
    transform: rotate(calc(var(--i) * 5deg))
      translate(calc(var(--i) * 106px), -50px);
    color: rgba(0, 0, 0, 0.2);
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.25);
  }

  .card-container:active .card__projects {
    background: #333;
  }
  .card-container .card__projects:active {
    translate: calc(var(--i) * 20px) -50px;
    z-index: 100;
    background: #5e5cfc;

    & h3 {
      color: black;
    }
    & p {
      color: antiquewhite;
    }
    & .area {
      margin: 5px 0 0 0;

      border: 2px solid rgba(255, 255, 255, 0.5);
      border-radius: 10px;
      color: #101010;
      padding: 5px;
    }
  }

  @media (width >= 640px) {
    .card-container .card__projects {
      transform-origin: 50% 100%;
    }
    .card-container:hover .card__projects {
      transform: rotate(calc(var(--i) * 5deg))
        translate(calc(var(--i) * 90px), -50px);
    }
  }
</style>

